<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">

    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="timberDebug">@color/debug</item>
        <item name="timberError">@color/error</item>
        <item name="timberWarn">@color/warn</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="TabLayoutTheme" parent="ToolbarTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

</resources>
