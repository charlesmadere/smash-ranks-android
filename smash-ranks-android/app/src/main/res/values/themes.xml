<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogThemeDayNight" parent="Theme.MaterialComponents.Light.Dialog.Alert" />

    <style name="AlertDialogTheme" parent="AlertDialogThemeDayNight">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

    <style name="AppTheme" parent="AppThemeDayNight">
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="timberDebug">@color/debug</item>
        <item name="timberError">@color/error</item>
        <item name="timberWarn">@color/warn</item>

        <item name="android:alertDialogTheme">@style/FrameworkAlertDialogTheme</item>
        <item name="android:navigationBarColor">@color/gray_dark</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppThemeDayNight" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="BottomSheetDialogThemeDayNight" parent="Theme.MaterialComponents.Light.BottomSheetDialog" />

    <style name="BottomSheetDialogTheme" parent="BottomSheetDialogThemeDayNight">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

    <style name="FrameworkAlertDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:colorPrimary">@color/gray</item>
        <item name="android:colorPrimaryDark">@color/gray_dark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_theme</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
    </style>

</resources>
