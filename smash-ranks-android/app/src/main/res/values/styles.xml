<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
        <item name="android:id">@id/bottomNavigationView</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">@dimen/bottom_navigation_view_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="menu">@menu/bottom_navigation_view</item>
    </style>

    <style name="ListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_half</item>
    </style>

    <style name="PreferenceView">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_half</item>
    </style>

    <style name="PreferenceViewDescription">
        <item name="android:id">@id/description</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toStartOf">@id/icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="PreferenceViewIcon">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:id">@id/icon</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PreferenceViewTitle">
        <item name="android:id">@id/title</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toStartOf">@id/icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="RecyclerView">
        <item name="android:id">@id/recyclerView</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="layoutManager">LinearLayoutManager</item>
    </style>

    <style name="RecyclerViewLine">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="RecyclerViewLine.1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="RecyclerViewLine.2">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="RecyclerViewMessage">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RecyclerViewMessage.Error">
        <item name="android:id">@id/error</item>
    </style>

    <style name="RecyclerViewMessage.Empty">
        <item name="android:id">@id/empty</item>
    </style>

    <style name="RefreshLayout">
        <item name="android:id">@id/refreshLayout</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="scrollingChild">@id/recyclerView</item>
    </style>

    <style name="SettingsCard">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/root_padding</item>
        <item name="android:layout_marginStart">@dimen/root_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="contentPaddingTop">@dimen/root_padding_quarter</item>
    </style>

    <style name="SettingsCardContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsCardDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_half</item>
    </style>

    <style name="SettingsCardTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/root_padding_quarter</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_quarter</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

</resources>
