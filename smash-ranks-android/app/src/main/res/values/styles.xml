<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_height">@dimen/bottom_navigation_view_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="elevation">@dimen/elevation</item>
        <item name="itemIconTint">@drawable/bottom_navigation_view_item_tint</item>
        <item name="itemTextColor">@drawable/bottom_navigation_view_item_tint</item>
        <item name="menu">@menu/bottom_navigation_view</item>
    </style>

    <style name="BottomSheetDialogButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_half</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BottomSheetDialogButton.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="drawableTintColor">?attr/colorAccent</item>
    </style>

    <style name="BottomSheetDialogMessage">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/root_padding</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BottomSheetDialogTitle">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/root_padding</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BottomSheetDialogRoot">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ConstraintListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
    </style>

    <style name="ConstraintListItem.WithBackground">
        <item name="android:background">@color/card_background</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_quarter</item>
    </style>

    <style name="DividerItem">
        <item name="android:background">@color/card_background</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_quarter</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/root_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/divider_item_height</item>
    </style>

    <style name="DividerItemDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_quarter</item>
        <item name="android:layout_marginEnd">@dimen/root_padding</item>
        <item name="android:layout_marginTop">@dimen/root_padding_half</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="DividerItemTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">bottom|start</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_quarter</item>
        <item name="android:layout_marginEnd">@dimen/root_padding</item>
        <item name="android:layout_marginStart">@dimen/root_padding</item>
        <item name="android:layout_marginTop">@dimen/root_padding_half</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="ListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_half</item>
    </style>

    <style name="ListItem.WithBackground">
        <item name="android:background">@color/card_background</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/elevation_quarter</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="MediumOrBoldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoContentLinearLayout">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/root_padding_double</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NoContentLinearLayout.Empty">
        <item name="descriptionText">@string/swipe_to_refresh_to_check_again</item>
    </style>

    <style name="NoContentLinearLayout.Error">
        <item name="descriptionText">@string/swipe_to_refresh_to_try_again</item>
    </style>

    <style name="NoContentLinearLayoutBody">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="NoContentLinearLayoutBody.Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_double</item>
        <item name="android:layout_marginEnd">@dimen/root_padding_double</item>
        <item name="android:layout_marginStart">@dimen/root_padding_double</item>
        <item name="android:layout_marginTop">@dimen/root_padding</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="NoContentLinearLayoutBody.Line1">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoContentLinearLayoutBody.Line2">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="PreferenceView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
    </style>

    <style name="PreferenceViewCheckable">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_half</item>
        <item name="android:layout_marginEnd">@dimen/root_padding</item>
        <item name="android:layout_marginTop">@dimen/root_padding_half</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="PreferenceViewDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/root_padding_half</item>
        <item name="android:layout_marginEnd">@dimen/root_padding_half</item>
        <item name="android:layout_marginStart">@dimen/root_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="PreferenceViewTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/root_padding_half</item>
        <item name="android:layout_marginStart">@dimen/root_padding</item>
        <item name="android:layout_marginTop">@dimen/root_padding_half</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/rv_thumb</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/rv_track</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/rv_thumb</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/rv_track</item>
        <item name="layoutManager">LinearLayoutManager</item>
    </style>

    <style name="RecyclerView.WithSections">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/root_padding</item>
    </style>

    <style name="RefreshLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SettingsCardDescription">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/root_padding_half</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_half</item>
    </style>

    <style name="SettingsCardTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/root_padding_quarter</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:paddingTop">@dimen/root_padding_quarter</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextButton" parent="@style/MediumOrBoldText">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/root_padding_eighth</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:minHeight">@dimen/list_item_height</item>
        <item name="android:padding">@dimen/root_padding_half</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewTab">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingEnd">@dimen/root_padding</item>
        <item name="android:paddingStart">@dimen/root_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/root_padding_half</item>
        <item name="android:paddingStart">@dimen/root_padding_half</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolbarTextButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/root_padding_half</item>
        <item name="android:paddingStart">@dimen/root_padding_half</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="WinsLossesCount">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/root_padding</item>
        <item name="android:layout_marginStart">@dimen/root_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="WinsLossesPlayerName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/root_padding</item>
        <item name="android:layout_marginStart">@dimen/root_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

</resources>
