<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_player" />

    <com.garpr.android.views.RefreshLayout
        style="@style/RefreshLayout">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                style="@style/RecyclerView.WithSections" />

            <com.garpr.android.views.NoContentLinearLayout
                app:line1Text="@string/no_player_data"
                style="@style/NoContentLinearLayout.Empty" />

            <com.garpr.android.views.ErrorContentLinearLayout
                app:line1Text="@string/error_loading_player"
                style="@style/NoContentLinearLayout.Error" />

        </FrameLayout>

    </com.garpr.android.views.RefreshLayout>

</LinearLayout>
