<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <com.garpr.android.features.common.views.SearchToolbar
        android:id="@+id/toolbar"
        app:descriptionTextColor="@color/transparent"
        app:showUpNavigation="true"
        app:titleTextColor="@color/transparent"
        style="@style/Toolbar" />

    <com.garpr.android.features.common.views.RefreshLayout
        android:id="@+id/refreshLayout"
        style="@style/RefreshLayout">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:visibility="gone"
                style="@style/RecyclerView.WithSections" />

            <com.garpr.android.features.common.views.NoContentLinearLayout
                android:id="@+id/empty"
                app:titleText="@string/no_player_data"
                style="@style/NoContentLinearLayout.Empty" />

            <com.garpr.android.features.common.views.ErrorContentLinearLayout
                android:id="@+id/error"
                app:titleText="@string/error_loading_player"
                style="@style/NoContentLinearLayout.Error" />

        </FrameLayout>

    </com.garpr.android.features.common.views.RefreshLayout>

</LinearLayout>
