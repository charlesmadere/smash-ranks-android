<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_tournament" />

    <android.support.design.widget.TabLayout
        style="@style/TabLayout" />

    <com.garpr.android.views.RefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <android.support.v4.view.ViewPager
                android:visibility="gone"
                style="@style/ViewPager" />

            <com.garpr.android.views.NoContentLinearLayout
                app:line1Text="@string/no_tournament_data"
                style="@style/NoContentLinearLayout.Empty" />

            <com.garpr.android.views.ErrorContentLinearLayout
                app:line1Text="@string/error_loading_tournament"
                style="@style/NoContentLinearLayout.Error" />

        </FrameLayout>

    </com.garpr.android.views.RefreshLayout>

</LinearLayout>
