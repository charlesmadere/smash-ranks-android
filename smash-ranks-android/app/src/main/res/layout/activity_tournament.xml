<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar" />
    <android.support.design.widget.TabLayout
        style="@style/TabLayout" />
    <com.garpr.android.views.RefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <android.support.v4.view.ViewPager
                android:visibility="gone"
                style="@style/ViewPager" />
            <LinearLayout
                style="@style/RecyclerViewMessage.Empty">
                <TextView
                    android:text="@string/no_tournaments"
                    style="@style/RecyclerViewLine.1" />
                <TextView
                    android:text="@string/swipe_to_refresh_to_check_again"
                    style="@style/RecyclerViewLine.2" />
            </LinearLayout>
            <com.garpr.android.views.ErrorLinearLayout
                style="@style/RecyclerViewMessage.Error">
                <TextView
                    android:text="@string/error_loading_tournament"
                    style="@style/RecyclerViewLine.1" />
                <TextView
                    android:text="@string/swipe_to_refresh_to_try_again"
                    style="@style/RecyclerViewLine.2" />
            </com.garpr.android.views.ErrorLinearLayout>
        </FrameLayout>
    </com.garpr.android.views.RefreshLayout>
</LinearLayout>
