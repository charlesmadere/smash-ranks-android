<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <com.garpr.android.views.toolbars.TournamentToolbar
        style="@style/Toolbar" />

    <com.garpr.android.views.RefreshLayout
        app:scrollingChild="@id/nestedScrollView"
        style="@style/RefreshLayout">

        <android.support.v4.widget.NestedScrollView
            style="@style/NestedScrollView">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/view_tournament_info" />

                <android.support.v7.widget.RecyclerView
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    style="@style/RecyclerView" />

                <com.garpr.android.views.ErrorContentLinearLayout
                    app:titleText="@string/error_loading_tournament"
                    style="@style/NoContentLinearLayout.Error" />

                <com.garpr.android.views.NoContentLinearLayout
                    android:id="@+id/emptyMatches"
                    app:titleText="@string/no_matches"
                    style="@style/NoContentLinearLayout.Empty" />

                <com.garpr.android.views.NoContentLinearLayout
                    android:id="@+id/emptyPlayers"
                    app:titleText="@string/no_players"
                    style="@style/NoContentLinearLayout.Empty" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.garpr.android.views.RefreshLayout>

</LinearLayout>
