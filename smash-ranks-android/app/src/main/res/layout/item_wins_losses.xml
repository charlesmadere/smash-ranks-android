<?xml version="1.0" encoding="utf-8"?>
<com.garpr.android.views.WinsLossesView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/wins_losses_height"
    android:layout_marginTop="@dimen/root_padding"
    android:layout_width="match_parent"
    android:orientation="horizontal">
    <android.support.v4.widget.Space
        android:layout_height="match_parent"
        android:layout_width="@dimen/root_padding" />
    <com.garpr.android.views.WinsLossesColumnView
        android:id="@+id/playerColumnView"
        app:playerOrOpponent="player"
        style="@style/WinsLossesColumnView">
        <TextView
            tools:text="8"
            style="@style/WinsLossesCount" />
        <TextView
            tools:text="PewPewU"
            style="@style/WinsLossesPlayerName" />
    </com.garpr.android.views.WinsLossesColumnView>
    <android.support.v4.widget.Space
        android:layout_height="match_parent"
        android:layout_width="@dimen/root_padding_quadruple" />
    <com.garpr.android.views.WinsLossesColumnView
        android:id="@+id/opponentColumnView"
        app:playerOrOpponent="opponent"
        style="@style/WinsLossesColumnView">
        <TextView
            tools:text="5"
            style="@style/WinsLossesCount" />
        <TextView
            tools:text="Shroomed"
            style="@style/WinsLossesPlayerName" />
    </com.garpr.android.views.WinsLossesColumnView>
    <android.support.v4.widget.Space
        android:layout_height="match_parent"
        android:layout_width="@dimen/root_padding" />
</com.garpr.android.views.WinsLossesView>
