<?xml version="1.0" encoding="utf-8"?>
<com.garpr.android.views.WinsLossesView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:layout_height="@dimen/wins_losses_height"
    android:layout_marginTop="@dimen/root_padding"
    android:layout_width="match_parent"
    android:paddingEnd="@dimen/root_padding"
    android:paddingStart="@dimen/root_padding">

    <com.garpr.android.views.WinsLossesColumnView
        android:id="@+id/playerColumnView"
        android:layout_alignParentStart="true"
        app:playerOrOpponent="player"
        style="@style/WinsLossesColumnView">

        <TextView
            tools:text="8"
            style="@style/WinsLossesCount" />

        <TextView
            tools:text="PewPewU"
            style="@style/WinsLossesPlayerName" />

    </com.garpr.android.views.WinsLossesColumnView>

    <com.garpr.android.views.WinsLossesColumnView
        android:id="@+id/opponentColumnView"
        android:layout_alignParentEnd="true"
        app:playerOrOpponent="opponent"
        style="@style/WinsLossesColumnView">

        <TextView
            tools:text="5"
            style="@style/WinsLossesCount" />

        <TextView
            tools:text="Shroomed"
            style="@style/WinsLossesPlayerName" />

    </com.garpr.android.views.WinsLossesColumnView>

    <com.garpr.android.views.WinsLossesGraphView
        android:id="@+id/winsLossesGraphView"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/wins_losses_graph_size"
        android:layout_width="@dimen/wins_losses_graph_size" />

</com.garpr.android.views.WinsLossesView>
