<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/root_padding_double"
        android:layout_width="wrap_content" />

    <TextView
        android:text="@string/loading_deep_link_"
        style="@style/NoContentLinearLayoutBody.Line1" />

    <TextView
        android:text="@string/please_wait_"
        style="@style/NoContentLinearLayoutBody.Line2" />

</LinearLayout>
