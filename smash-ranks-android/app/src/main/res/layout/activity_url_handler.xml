<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/root">
    <ProgressBar
        android:id="@+id/activity_url_handler_progress"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <LinearLayout
        android:id="@+id/activity_url_handler_error"
        tools:visibility="visible"
        style="@style/error_container">
        <TextView
            android:text="@string/error_fetching_data"
            style="@style/error_line1" />
        <Button
            android:id="@+id/activity_url_handler_retry"
            android:layout_marginTop="@dimen/root_padding"
            android:minWidth="128dp"
            android:text="@string/try_again"
            style="@style/error_line2" />
    </LinearLayout>
</FrameLayout>
