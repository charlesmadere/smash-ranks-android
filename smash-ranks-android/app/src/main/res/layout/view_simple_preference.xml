    tools:parentTag="android.support.constraint.ConstraintLayout"
    style="@style/PreferenceView">

    <com.garpr.android.views.TintedImageView
        tools:src="@drawable/ic_date_range_white_24dp"
        style="@style/PreferenceViewCheckable" />

    <TextView
