<?xml version="1.0" encoding="utf-8"?>
<!--suppress XmlUnusedNamespaceDeclaration -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="com.garpr.android.views.SimplePreferenceView"
    tools:style="@style/PreferenceView">

    <com.garpr.android.views.TintedImageView
        android:id="@+id/icon"
        tools:src="@drawable/ic_date_range_white_24dp"
        style="@style/PreferenceViewCheckable" />

    <TextView
        android:id="@+id/title"
        tools:text="@string/must_be_charging"
        style="@style/PreferenceViewTitle" />

    <TextView
        android:id="@+id/description"
        tools:text="@string/rankings_polling_description"
        style="@style/PreferenceViewDescription" />

    <include
        layout="@layout/view_constraint_layout_foreground" />

</merge>
