<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/drawer_layout">
    <LinearLayout
        android:orientation="vertical"
        style="@style/root.no_padding">
        <include
            layout="@layout/toolbar" />
        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <LinearLayout
                android:gravity="center"
                android:id="@+id/activity_favorites_progress"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:indeterminate="true"
                    android:indeterminateOnly="true"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <TextView
                    android:text="@string/loading_your_favorites_list_"
                    style="@style/loading_message" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:clipToPadding="false"
                android:id="@+id/activity_favorites_list"
                android:paddingBottom="@dimen/root_padding_half"
                style="@style/list" />
            <LinearLayout
                android:id="@+id/activity_favorites_empty"
                tools:visibilty="visible"
                style="@style/error_container">
                <TextView
                    android:text="@string/you_have_no_favorites"
                    style="@style/error_line1" />
                <TextView
                    android:text="@string/favorites_empty_subheader"
                    style="@style/error_line2" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <include
        layout="@layout/navigation_view" />
</android.support.v4.widget.DrawerLayout>
