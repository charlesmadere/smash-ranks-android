<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:ellipsize="end"
        android:fontFamily="@font/nunito_sans"
        android:gravity="center"
        android:id="@+id/name"
        android:layout_height="128dp"
        android:layout_marginBottom="@dimen/root_padding"
        android:layout_marginEnd="@dimen/root_padding"
        android:layout_marginStart="@dimen/root_padding"
        android:layout_width="match_parent"
        android:lineSpacingExtra="-4dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="@dimen/text_size_xxxlarge"
        app:autoSizeMinTextSize="@dimen/text_size_xlarge"
        app:autoSizeTextType="uniform"
        tools:text="Melee @ the Made #32" />

    <TextView
        android:fontFamily="sans-serif-medium"
        android:id="@+id/region"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/root_padding"
        android:layout_marginStart="@dimen/root_padding"
        android:layout_width="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="@string/norcal" />

    <TextView
        android:id="@+id/date"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/root_padding"
        android:layout_marginStart="@dimen/root_padding"
        android:layout_width="wrap_content"
        tools:text="November 28, 1989" />

    <TextView
        android:id="@+id/entrantsCount"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/root_padding"
        android:layout_marginEnd="@dimen/root_padding"
        android:layout_marginStart="@dimen/root_padding"
        android:layout_width="wrap_content"
        tools:text="1,024 entrants" />

    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/root_padding"
        android:layout_marginEnd="@dimen/root_padding"
        android:layout_marginStart="@dimen/root_padding"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.garpr.android.features.common.views.TintedTextView
            android:drawableTop="@drawable/ic_open_in_browser_white_24dp"
            android:id="@+id/openLink"
            android:text="@string/open_bracket_link"
            style="@style/TextButton" />

        <com.garpr.android.features.common.views.TintedTextView
            android:drawableTop="@drawable/ic_share_white_24dp"
            android:id="@+id/share"
            android:text="@string/share"
            style="@style/TextButton" />

    </LinearLayout>

</merge>
